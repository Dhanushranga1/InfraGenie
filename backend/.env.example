# InfraGenie Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=InfraGenie
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Groq Cloud Configuration (Required for LLM access via Groq)
GROQ_API_KEY=gsk_your-groq-api-key-here

# Infracost Configuration (Required for cost estimation)
INFRACOST_API_KEY=ics_v1_your-infracost-api-key-here

# AWS Configuration (Optional - for Terraform operations)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Settings (Frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
